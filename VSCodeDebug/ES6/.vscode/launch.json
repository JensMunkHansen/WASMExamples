{
    "version": "0.2.0",
    "configurations": [
	{
            "name": "Launch (works without ES6)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/index.html",
            "webRoot": "${workspaceFolder}/build/Debug",
            "preLaunchTask": "StartServer",
            "sourceMaps": true,
            "skipFiles": ["<node_internals>/**"],
            // Strange works if Simple.cxx is is top-folder
            // Path mapping points to top folder
            // Is it the wrong index.html????
            // When launched from node it tries to locate localhost:3000/Simple.cxx
            "pathMapping": {
                "/": "${workspaceFolder}/build/Debug",
                "file://${workspaceFolder}": "${workspaceFolder}"
            },
            "runtimeArgs": [
                "--enable-experimental-webassembly-features",
                "--allow-file-access-from-files",
                "--disable-web-security",
                "--remote-debugging-port=9222",
                "--user-data-dir=${workspaceFolder}/.vscode/chrome-profile"
            ]            
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222, // Port Chrome is using for remote debugging
            },
            "runtimeArgs": [
              "--allow-file-access-from-files" // Ensure file:// URLs can be accessed
            ],
        },
	{
            "name": "Launch (root)",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000/build/Debug/index.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "StartServer",
            "sourceMaps": true,
            "runtimeArgs": [
                "--enable-experimental-webassembly-features",
                "--allow-file-access-from-files",
                "--remote-debugging-port=9222",
                "--disable-web-security"
            ]
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/build/Debug",
            "url": "http://localhost:3000/build/Debug/index.html"
        },
	{
            "name": "LaunchShell",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/shell.html",
            "preLaunchTask": "StartServer",
        },
        {
            "name": "Launch with npx serve",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/build/Debug",
            "preLaunchTask": "StartServer",
            "runtimeArgs": [
              "--allow-file-access-from-files"
            ]
        }        
    ]	
}
