{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Emscripten",
            "binaryDir": "build",
            "generator": "Ninja Multi-Config",
            "toolchainFile": "$env{HOME}/github/emsdk/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
            "cacheVariables": {
                "BUILD_TESTING": "ON",
                //"WASMExamples_DEBUG": "READABLE_JS",
                //"WASMExamples_OPTIMIZATION": "BEST",
                "Catch2_DIR": "$env{HOME}/github/Catch2CMake/install/lib/cmake/Catch2"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "default",
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "configurePreset": "default",
            "configuration": "Release"
        },
        {
            "name": "Asan",
            "configurePreset": "default",
            "configuration": "Asan"
        }
    ]
}
